<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-9dp" />

    <Button
        android:id="@+id/buttonLeaveGameInPlayingScreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="casual"
        android:text="@string/leave_game_btn"
        android:textColor="@color/black"
        app:backgroundTint="#A3EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/imageFilterButtonSeeScore"
        android:layout_width="80dp"
        android:layout_height="70dp"
        app:backgroundTint="#A3EEEEEE"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/buttonSeeLastHint"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginEnd="240dp"
        android:fontFamily="casual"
        android:text="@string/player_see_hint"
        android:textColor="@color/black"
        app:backgroundTint="#A3EEEEEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>