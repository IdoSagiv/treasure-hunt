<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/buttonLeaveScoreScreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="casual"
        android:text="@string/player_back_to_map"
        android:textColor="@color/black"
        app:backgroundTint="#A3EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/listOfTeamsScore"
        android:layout_width="335dp"
        android:layout_height="67dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/player_last_hint"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editTextGameCode"
        android:layout_width="319dp"
        android:layout_height="217dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="36dp"
        android:background="@color/white"
        android:fontFamily="casual"
        android:hint="last hint"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listOfTeamsScore" />


</androidx.constraintlayout.widget.ConstraintLayout>