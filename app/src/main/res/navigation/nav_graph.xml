<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="huji.postpc2021.treasure_hunt.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen">
        <action
            android:id="@+id/action_homeScreen_to_enterGameFragment2"
            app:destination="@id/enterGameFragment2" />
    </fragment>
    <fragment
        android:id="@+id/enterGameFragment2"
        android:name="huji.postpc2021.treasure_hunt.EnterGameFragment"
        android:label="fragment_enter_game"
        tools:layout="@layout/fragment_enter_game">
        <action
            android:id="@+id/action_enterGameFragment2_to_waitForGameFragment"
            app:destination="@id/waitForGameFragment" />
    </fragment>
    <fragment
        android:id="@+id/waitForGameFragment"
        android:name="huji.postpc2021.treasure_hunt.WaitForGameFragment"
        android:label="fragment_wait_for_game"
        tools:layout="@layout/fragment_wait_for_game" />
</navigation>