<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreenFragment">

    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="huji.postpc2021.treasure_hunt.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen">
        <action
            android:id="@+id/action_homeScreen_to_enterGame"
            app:destination="@id/enterGameFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeScreenFragment_to_creatorLoginFragment"
            app:destination="@id/creatorLoginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/enterGameFragment"
        android:name="huji.postpc2021.treasure_hunt.PlayerFlow.Fragments.EnterGameFragment"
        android:label="fragment_enter_game"
        tools:layout="@layout/fragment_enter_game">
        <action
            android:id="@+id/action_enterGame_to_waitForGame"
            app:destination="@id/waitForGameFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_left" />
        <argument
            android:name="gameCode"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/waitForGameFragment"
        android:name="huji.postpc2021.treasure_hunt.PlayerFlow.Fragments.WaitForGameFragment"
        android:label="fragment_wait_for_game"
        tools:layout="@layout/fragment_wait_for_game">
        <action
            android:id="@+id/action_waitForGame_to_homeScreen"
            app:destination="@id/homeScreenFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left" />
        <action
            android:id="@+id/action_waitForGameFragment_to_playerGameFragment"
            app:destination="@id/playerGameFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_left" />
    </fragment>

    <fragment
        android:id="@+id/creatorLoginFragment"
        android:name="huji.postpc2021.treasure_hunt.CreatorFlow.Fragments.CreatorLoginFragment"
        android:label="fragment_creator_login"
        tools:layout="@layout/fragment_creator_login">
        <action
            android:id="@+id/action_creatorLoginFragment_to_creatorRegisterFragment"
            app:destination="@id/creatorRegisterFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_creatorLoginFragment_to_creatorHomeScreenFragment"
            app:destination="@id/creatorHomeScreenFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_creatorLoginFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left" />
    </fragment>

    <fragment
        android:id="@+id/creatorRegisterFragment"
        android:name="huji.postpc2021.treasure_hunt.CreatorFlow.Fragments.CreatorRegisterFragment"
        android:label="fragment_creator_register"
        tools:layout="@layout/fragment_creator_register">
        <action
            android:id="@+id/action_creatorRegisterFragment_to_creatorHomeScreenFragment"
            app:destination="@id/creatorHomeScreenFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_left" />
    </fragment>

    <fragment
        android:id="@+id/creatorHomeScreenFragment"
        android:name="huji.postpc2021.treasure_hunt.CreatorFlow.Fragments.CreatorHomeScreenFragment"
        android:label="fragment_creator_home_screen"
        tools:layout="@layout/fragment_creator_home_screen">
        <action
            android:id="@+id/action_creatorHomeScreenFragment_to_creatorEditGameFragment"
            app:destination="@id/creatorEditGameFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_creatorHomeScreenFragment_to_creatorLoginFragment"
            app:destination="@id/creatorLoginFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left" />
        <action
            android:id="@+id/action_creatorHomeScreenFragment_to_creatorDoneEditGameFragment"
            app:destination="@id/creatorDoneEditGameFragment" />
        <action
            android:id="@+id/action_creatorHomeScreenFragment_to_creatorInPlayFragment"
            app:destination="@id/creatorInPlayFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_creatorHomeScreenFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left" />
    </fragment>

    <fragment
        android:id="@+id/creatorEditGameFragment"
        android:name="huji.postpc2021.treasure_hunt.CreatorFlow.Fragments.CreatorEditGameFragment"
        android:label="fragment_creator_edit_game"
        tools:layout="@layout/fragment_creator_edit_game">
        <action
            android:id="@+id/action_creatorEditGameFragment_to_creatorDoneEditGameFragment"
            app:destination="@id/creatorDoneEditGameFragment" />
        <action
            android:id="@+id/action_creatorEditGameFragment_to_creatorHomeScreenFragment"
            app:destination="@id/creatorHomeScreenFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left" />
    </fragment>

    <fragment
        android:id="@+id/creatorDoneEditGameFragment"
        android:name="huji.postpc2021.treasure_hunt.CreatorFlow.Fragments.CreatorDoneEditGameFragment"
        android:label="fragment_creator_done_editing"
        tools:layout="@layout/fragment_creator_done_editing">
        <action
            android:id="@+id/action_creatorDoneEditGameFragment_to_creatorInPlayFragment"
            app:destination="@id/creatorInPlayFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left" />
        <action
            android:id="@+id/action_creatorDoneEditGameFragment_to_creatorHomeScreenFragment"
            app:destination="@id/creatorHomeScreenFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left" />
    </fragment>

    <fragment
        android:id="@+id/creatorInPlayFragment"
        android:name="huji.postpc2021.treasure_hunt.CreatorFlow.Fragments.CreatorInPlayFragment"
        android:label="fragment_creator_in_play"
        tools:layout="@layout/fragment_creator_in_play">
        <action
            android:id="@+id/action_creatorInPlayFragment_to_creatorHomeScreenFragment"
            app:destination="@id/creatorHomeScreenFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left" />
    </fragment>

    <fragment
        android:id="@+id/playerGameFragment"
        android:name="huji.postpc2021.treasure_hunt.PlayerFlow.Fragments.PlayerGameFragment"
        android:label="fragment_player_game"
        tools:layout="@layout/fragment_player_game">
        <action
            android:id="@+id/action_playerGameFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left" />
        <action
            android:id="@+id/action_playerGameFragment_to_playerGameOverFragment"
            app:destination="@id/playerGameOverFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_left" />
    </fragment>

    <fragment
        android:id="@+id/playerGameOverFragment"
        android:name="huji.postpc2021.treasure_hunt.PlayerFlow.Fragments.PlayerGameOverFragment"
        android:label="fragment_game_over"
        tools:layout="@layout/fragment_game_over">
        <action
            android:id="@+id/action_playerGameOverFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left" />
    </fragment>
</navigation>